<%= form_with(model: map) do |form| %>
  <% if map.errors.any? %>
    <div style="color: red">
      <h2> エラーがあります</h2>

      <ul>
        <% map.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-4">
    <div class="col-5">
      <%= form.label :緯度, style: "display: block" %>
      <%= form.text_field :latitude, :placeholder => "値を入力してください" %>
    </div>

    <div class="col-5">
      <%= form.label :経度, style: "display: block" %>
      <%= form.text_field :longitude, :placeholder => "値を入力してください"%>
    </div>
  </div>

  <div>
    <%= form.label :メモ, style: "display: block" %>
    <%= form.text_field :memo %>
  </div>

  <div class="mt-5">
    <%= form.submit "住所表示" , class: "btn btn-outline-primary" %>
  </div>

<% end %>

<div id="<%= dom_id map %>">

  <div class="border border-4">

    <div class="row mx-2 mt-2 border-bottom">
      <p class="col-3">
        <strong>緯度:</strong>
        <%= map.latitude %>
      </p>

      <p class="col-3">
        <strong>経度:</strong>
        <%= map.longitude %>
      </p>
    </div>

    <p class="fs-3 mx-3">
      <strong>住所 : </strong>
      <%= map.display_address %>
    </p>

    <p class="mx-4">
      メモ : 
      <%= map.memo %>
    </p>

   <div id="tizu_<%=map.id%>" style="height: 200px; width: 400px;" ></div>

  </div>

</div>

<script>
  var map = L.map("tizu_<%=map.id%>").setView([<%= map.latitude %>, <%= map.longitude %>], 13);
  L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
  }).addTo(map);

  var marker = L.marker([<%= map.latitude %>, <%= map.longitude %>]).addTo(map);

  marker.bindPopup("<%= map.memo %>");
</script>

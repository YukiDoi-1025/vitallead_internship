<p style="color: green"><%= notice %></p>

<% content_for :title, "Maps" %>

<h2 class="text-primary">一覧</h2>

<div id="maps">
  <% @maps.each do |map| %>
    <%= render map %>
    <p>
      <%= link_to "詳細", map %>
    </p>
  <% end %>
</div>

<div class="fs-4">
  <%= link_to "新規登録", new_map_path, class: "fs-3" , class: "link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"%>
</div>
